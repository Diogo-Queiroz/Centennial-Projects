@model RecipesLab2.Models.GuestReponse;

@{ Layout = "_Layout"; }

<!DOCTYPE html>
<html>
	<head>
		<meta name="viewport" content="width=device-width" />
		<title>RsvpForm</title>
	</head>
	<body>
		<div>
			<form asp-action="RsvpForm" method="post">
				<p>
					<label asp-for="Name">Your name:</label>
					<input asp-for="Name" />
				</p>
				<p>
					<label asp-for="Email">Your e-mail:</label>
					<input asp-for="Email" />
				</p>
				<p>
					<label asp-for="Phone">Your phone:</label>
					<input asp-for="Phone" />
				</p>
				<p>
					<label>Will you attend?</label>
					<select asp-for="WillAttend">
						<option value="">Select One</option>
						<option value="true">Sure, I'll be there</option>
						<option value="false">Sorry lad, I can show</option>
					</select>
				</p>
				<button type="submit">Submit RSVP</button>
			</form>
		</div>
	</body>
</html>