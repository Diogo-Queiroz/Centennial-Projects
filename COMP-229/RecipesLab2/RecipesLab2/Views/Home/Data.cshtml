@model IEnumerable<RecipesLab2.Models.Recipe>
@{
	int counter = 1;
	ViewData["Title"] = "Data";
	Layout = "_Layout";
}

<h1>List of Recipes</h1>
<div class="container">

	@foreach (Recipe recipe in Model)
	{
		if (counter == 1)
		{
			@:<div class="row">
		}
		<div class="col">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Recipe of - @recipe.Name</h5>
					<p class="card-text">@recipe.Description</p>
					<a asp-action="Display" asp-route-id="@recipe.RecipeID" class="btn btn-primary">@recipe.Name Details</a>
				</div>
			</div>
		</div>
		if (counter == 3)
		{
			@:</div>
			counter = 0;
		}
		counter++;
	}
	</div>
<div class="container">
	<div class="row">
		<div class="col"></div>
		<div class="col">
			<nav aria-label="Page Navigation">
				<ul class="pagination">
					<li class="page-item">
						<a class="page-link" href="#">Previous Page</a>
					</li>
					<li class="page-item">
						<a class="page-link">1</a>
					</li>
					<li class="page-item">
						<a class="page-link" href="#">2</a>
					</li>
					<li class="page-item">
						<a class="page-link" href="#">3</a>
					</li>
					<li class="page-item">
						<a class="page-link" href="#">Next Page</a>
					</li>
				</ul>
			</nav>
		</div>
		<div class="col"></div>
	</div>

</div>