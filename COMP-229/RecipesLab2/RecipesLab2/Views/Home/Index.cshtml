@{
	ViewData["Title"] = "Index";
	Layout = "_Layout";
}

<div class="jumbotron background-flag">
	<div class="container">
		<h1 class="display-3">
			Hello, World of Recipes!!
		</h1>
		<p>This is the initial template for the Recipes site. Everything in here is static and is yet to be programmed.</p>
		<p>
			<a class="btn btn-primary btn-lg" asp-action="Data" role="button">
				List of Recipes
			</a>
		</p>
	</div>
</div>
<div id="RecipeCarousel" class="carousel slide carousel-z-index" data-ride="carousel">
	<ol class="carousel-indicators">
		<li data-target="#RecipeCarousel" data-slide-to="0" class="active"></li>
		<li data-target="#RecipeCarousel" data-slide-to="1"></li>
		<li data-target="#RecipeCarousel" data-slide-to="2"></li>
		<li data-target="#RecipeCarousel" data-slide-to="3"></li>
	</ol>
	<div class="carousel-inner carousel-max-height">
		<div class="carousel-item active">
			<img src="lib/img/Pastel.jpg" class="d-block w-100" alt="Carousel Item 1" />
		</div>
		<div class="carousel-item">
			<img src="lib/img/Bolo-De-Cenoura.jpg" class="d-block w-100" alt="Carousel Item 2" />
		</div>
		<div class="carousel-item">
			<img src="lib/img/Shrimp-Bobo.jpg" class="d-block w-100" alt="Carousel Item 3" />
		</div>
		<div class="carousel-item">
			<img src="lib/img/Brigadeiro.jpg" class="d-block w-100" alt="Carousel Item 4" />
		</div>
	</div>
	<a class="carousel-control-prev" href="#RecipeCarousel" role="button" data-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="carousel-control-next" href="#RecipeCarousel" role="button" data-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>