@model PartyEnvites.Models.GuestReponse;
@{
    Layout = null;
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<html>
    <head>
        <title>RSVP FORM</title>
    </head>

    <body>
        <div>
            <form asp-action="RsvpForm" method="post">
                <p>
                    <label asp-for="Name">Your Name:</label>
                    <input asp-for="Name" />
                </p>
                <p>
                    <label asp-for="Email">Your Name:</label>
                    <input asp-for="Email" />
                </p>
                <p>
                    <label asp-for="Phone">Your Name:</label>
                    <input asp-for="Phone" />
                </p>
                <p>
                    <select asp-for="WillAttend">
                        <option value="">Choose an option</option>
                        <option value="true">Yes, I'll go.</option>
                        <option value="false">Nops, Sorryyy</option>
                    </select>
                </p>
                <button type="submit">Submit</button>
                <button type="reset">Reset</button>
            </form>
        </div>

        <a asp-action="RsvpForm">RSVP Form</a>
    </body>
</html>

